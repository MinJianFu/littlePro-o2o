
.__alertBox{
    position:fixed;
    width:100%;
    height:100%;
    top:0;
    justify-content:center;
    align-items:center;
    display:flex;
    z-index:100;
    color: #586069;
}
.__AB_bg{
    background:rgba(0,0,0, .3);
    width:100%;
    height:100%;
    position:absolute;
    top:0;
    left: 0;
}
.__AB_main{
    background:#fff;
    position:relative;
    width:300px;
    border-radius:5px;

}
.__AB_head{
    text-align:center;
    border-bottom:1px solid rgba(27,31,35,0.15);
    padding:12px;

}
.__AB_body{
    padding:12px;
    border-bottom:1px solid rgba(27,31,35,0.15);

}
.__AB_foot{
    text-align:center;
    padding:12px;

}
.hidden{
    display: none!important;
}