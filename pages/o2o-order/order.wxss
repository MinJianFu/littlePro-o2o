page{
    height: 100%;
    background: #F2F1EF;
}
.header-bar{
    width:100%;
    background:#1BAAD5;
    padding:10px 0;
    position:fixed;
    z-index:2;
}
.header-ul{
    width: 90%;
    margin: 0 auto;
    background: #fff;
    color: #9e9e9e;
    border-radius: 20px;
    padding: .5%;
    position: relative;
}
.header-li{
    display: inline-block;
    width: 33%;
    text-align: center;
    height: 26px;
    line-height: 26px;
    font-size: 16px;
    position: relative;
}
.header-ul .on{
    color: #fff;
}
.header-on{
    position: absolute;
    width: 33%;
    height: 26px;
    background: #1BAAD5;
    border-radius: 20px;
    transition: all .3s;
}
.header-ul .state0{
    transform:translateX(0);
}
.header-ul .state1{
    transform:translateX(100%);
}
.header-ul .state2{
    transform:translateX(200%);
}
.order-list{
    padding: 8px 8px 0;
}
.order-item{
    background: #fff;
    padding:8px;
    border-radius: 8px;
    margin: 6px 0;
    position: relative;
}
.item-top{
    display: flex;
    justify-content: space-between;
    align-items: center;
    line-height: 30px;
    height: 30px;
    overflow: hidden;
    border-bottom: 1px solid #F2F1EF;
    color: #5e5e5e;
}

.type-icon{
    width: 18px;
    height: 20px;
    vertical-align: middle;
    margin-right: 5px;
}
.buy-type{
    vertical-align: middle;
}
.item-content{
    display:flex;
    justify-content:space-between;
    align-items:center;
    text-align:center;
    padding:10px 0;
    border-bottom:1px solid #F2F1EF;
    font-size:14px;
    color:#333;
}
.centerSymbol{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding:0 10px;
    width:80px;
}
.order-icon1{
    width: 20px;
    height: 20px;
    background: url(../icon/order-ricon2.jpg) no-repeat center;
    background-size: 20px;
}
.order-icon2{
    width: 20px;
    height: 20px;
    background: url(../icon/order-icon1.jpg) no-repeat center;
    background-size: 20px;
}
.address,.content-type{
    margin-bottom:6px;
    flex:1;
}
.item-bottom{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 5px 0 0;
}
.order-type,.user-name{
    font-size: 14px;
}
.user-name{
    color: #353535;
}
.order-date{
    color:#DBD8D3;
    font-size: 14px;
}
button{
    margin: 0;
    height: 32px;
    background: #1BAAD5;
    line-height: 32px;
    color: #fff;
    font-size: 16px;
}

