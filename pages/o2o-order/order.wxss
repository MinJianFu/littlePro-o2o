.header-bar{
    width: 100%;
    background: #1BAAD5;
    padding: 10px 0;
}
.header-ul{
    width: 90%;
    margin: 0 auto;
    background: #fff;
    color: #9e9e9e;
    border-radius: 20px;
    padding: .5%;
    position: relative;
}
.header-li{
    display: inline-block;
    width: 33%;
    text-align: center;
    height: 26px;
    line-height: 26px;
    font-size: 16px;
    position: relative;
}
.header-ul .on{
    color: #fff;
}
.header-on{
    position: absolute;
    width: 33%;
    height: 26px;
    background: #1BAAD5;
    border-radius: 20px;
    transition: all .3s;
}
.header-ul .state0{
    transform:translateX(0);
}
.header-ul .state1{
    transform:translateX(100%);
}
.header-ul .state2{
    transform:translateX(200%);
}
