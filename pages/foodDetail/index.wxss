.shoppingCartBox{
    font-family:微软雅黑 ;
    position:fixed;
    background: #5d5d5d;
    width:100%;
    height:44px;
    bottom:0;
    padding:0 12px;
    box-sizing:border-box;
    color: #fff;
}
.SCLDB{
    display: inline-block;
    vertical-align: top;
}
.icon_shoppingCart{
    position: relative;
    width:30px;
    top:4px;
}
.SCLDB.leftM{
    top:12px;
    position:relative;
    font-size:16px;
    margin-left:12px;
}
.SCLDB.rightM{
    position:absolute;
    right:12px;
    top:12px;
    font-size:16px;
}
.shoppingIcon{
    width:48px;
    height:48px;
    border-radius:50%;
    background:#888;
    position:relative;
    top:-10px;
    display: inline-block;
    vertical-align: top;
}
.icon_shoppingCart2{
    position: relative;
    width:36px;
    top:6px;
    left:5px;
}
.SCLHFBL.countNum{
    position:absolute;
    width:18px;
    height:18px;
    background:#ff3f72;
    top:-4px;
    right:0;
    border-radius:50%;
    text-align:center;
    font-size:12px;
    line-height:18px;
    border:1px solid #fff;
}
.SCLHFB.leftMo{
    display:inline-block;
}
.allMoneyBox{
    display:inline-block;
}
.okBtnBox{
    display:inline-block;
    position:absolute;
    right:0;
}
.allMoneyCon, .allMoneyConSign, .allMoneyResult, .noEnoughMoneyCount, .sendMoneyResult{
    display: inline-block;
}
.allMoneyConSign{
    font-size: 12px;
}
.sendMoneyInfo{
    font-size:12px;
}
.allMoneyBox {
    margin:2px 0 0 8px;

}
.noEnoughMoneyBox{
    height:44px;
    width:120px;
    text-align:center;
    line-height:44px;
    background:#777;
    font-size:16px;
}
.goSureBtn{
    height:44px;
    width:120px;
    text-align:center;
    line-height:44px;
    background:#ff3f72;
    font-size:16px;
}

.hidden{
    display:none!important;
}
.AODB{
    display: inline-block;
}
.addOrDelBox{
    position:absolute;
    width:85px;
    bottom:10px;
    right:10px;
    height:30px;
}
.deleteGoodCount{
    width:25px;
    text-align:center;
    height:25px;
    background:#fff;
    line-height:22px;
    border-radius:50%;
    bottom:0;
    border:1px solid #b3b3b3;
    font-size:24px;
    position: absolute;
}
.thisGoodCount{
    width:30px;
    text-align:center;
    top:5px;
    position:relative;
    left:28px;
}
.addFoodBtn{
    width:28px;
    text-align:center;
    height:28px;
    background: #ffe31d;
    line-height:23px;
    border-radius:50%;
    bottom:0;
    font-size:24px;
    right:0;
    position: absolute;
}