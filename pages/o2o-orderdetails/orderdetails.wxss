page{
    height: 100%;
    background: #F2F1EF;
}
.user-info{
    background: #fff;
    padding: 10px 15px 0;
}
.title{
    height: 30px;
    border-bottom: 1px solid #F2F1EF;
}
.title>text{
    vertical-align: middle;
}
.order-type{
    width: 20px;
    vertical-align: middle;
    margin-right: 16px;
}
.buy-address,.collect-address{
    display: flex;
    align-items: center;
    padding: 10px 0;
    color: #ABA7A2;
    font-size: 12px;
}
.buy-address{
    border-bottom: 1px solid #F2F1EF;
}
.info-conV{
    flex: 1;
}
.info-rightV{
    text-align: right;
}
.info-rightV{
    color: #353535;
    font-size: 16px;
}
.buy-address>view view:nth-child(1),.collect-address>view view:nth-child(1){
    margin-bottom: 5px;
}
.collect-icon,.buy-icon{
    border-radius:50%;
    border:1px solid;
    font-size:13px;
    margin-right:10px;
    width:20px;
    height:20px;
    text-align:center;
    line-height:20px;
}
.buy-icon{
    color: #ef644a;
}
.collect-icon{
    color: #2fb2d9;
}
.goods-info,.order-info, .rider-info{
    padding: 15px;
    background: #fff;
    margin-top: 8px;
}
.info-conV{
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 14px;
    line-height: 20px;
}
.info-rightV{
    color: #ABA7A2;
}
.rider-info{
    padding-bottom: 40px;
}
.btn-bar{
    position: fixed;
    bottom:0;
    left: 0;
    right: 0;
    height: 40px;
    width: 100%;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 15px;
    box-sizing: border-box;
}
button{
    margin: 0;
    line-height: 24px;
    font-size: 14px;
    background: #fff;
    color: #1BAAD5;
    border:1px solid;
}
.oncemore-btn{
    color:#fff;
    background:#1BAAD5;

}